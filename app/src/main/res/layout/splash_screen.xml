<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f56060">



    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="12dp"
        android:id="@+id/view2"
        android:layout_gravity="center"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="#2ae2c4"
        android:layout_centerInParent="true"
        android:innerRadius="0dp"
        android:shape="ring"
        >

        <ImageView
            android:foregroundGravity="center"
            android:layout_width="80dp"
            android:layout_gravity="center"
            android:layout_height="150dp"
            android:src="@drawable/book"
            android:id="@+id/imageView2" />



    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        app:cardElevation="50dp"
        app:cardBackgroundColor="#1e1b1b"
        android:layout_height="wrap_content">

    <TextView
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:id="@+id/sp"
        android:background="#6a71df"
        android:textColor="@color/bg_screen2"
        android:text="Welcome To NewFeeds"
        android:textStyle="bold"/>
        <View
            android:layout_below="@+id/sp"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/bg_screen2">
        </View>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/bg_screen2">
        </View>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Hein Htet"/>


</RelativeLayout>